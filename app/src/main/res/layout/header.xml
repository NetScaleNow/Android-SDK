<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

	<ImageButton
		android:id="@+id/ib_quit"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentEnd="true"
		android:background="@drawable/buttonshape_navigation"
		android:onClick="quitDialog"
		android:src="@drawable/ic_clear_white_24dp"/>

	<TextView
		android:id="@+id/tv_campaign_title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/ib_quit"
		android:layout_centerHorizontal="true"
		android:layout_gravity="center"
		android:gravity="center"
		android:text="@string/campaign_title"
		android:textColor="@color/colorAccentCmc"
		android:textSize="@dimen/text_medium"
		android:textStyle="bold"/>

	<TextView
		android:id="@+id/tv_campaign_subtitle"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/tv_campaign_title"
		android:layout_centerHorizontal="true"
		android:layout_gravity="center"
		android:layout_margin="@dimen/margin_default"
		android:gravity="center"
		android:text="@string/campaign_subtitle"
		android:textColor="@android:color/black"/>

</RelativeLayout>
